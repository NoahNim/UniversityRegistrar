<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <title>University Registrar</title>
  </head>
  <body>
    <div class = "container text-center">
      <h1>University Registrar Courses</h1>
      <ul>
        @if (Model != null)
        {
          @foreach (var course in Model)
          {
            <li><a href='/courses/@course.GetId()'>@course.GetName() @course.GetCourseNum() <a href="/courses/@course.GetId()/delete"><button type="button" name="button">Delete Course</button></a></a></li>
          }
        }
      </ul>
      <a href="/courses/new"><button type="button" name="button">Add Course</button></a>
      <a href="/courses/deleteall"><button type="button" name="button">Delete All Courses</button></a>
      <h4><a href="/">Return home</a></h4>
    </div>
  </body>
</html>
