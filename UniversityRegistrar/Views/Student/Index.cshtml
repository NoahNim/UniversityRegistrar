<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>University Registrar</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
  </head>
  <body>
    <div class="container text-center">
      <h1>University Registrar Students</h1>
      <ul>
      @if (Model != null)
      {
        @foreach (var student in Model)
        {
          <li><a href='/students/@student.GetId()'>@student.GetName() @student.GetDate() <a href="/students/@student.GetId()/delete"><button type="button" name="button">Delete Student</button></a></a></li>
        }
      }
      </ul>
      <h4><a href="/students/new"><button type="button" name="button">Add Student</button></a></h4>
      <h4><a href="/students/deleteall"><button type="button" name="button">Delete All Student</button></a></h4>
      <h4><a href="/">Return home</a></h4>
  </div>
  </body>
</html>
